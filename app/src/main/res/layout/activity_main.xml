<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttom_percent"
        style="@style/button_style.white"
        android:text="@string/percent"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_9"
        app:layout_constraintEnd_toStartOf="@+id/buttom_division"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_negative"
        app:layout_constraintTop_toTopOf="@+id/buttom_AC"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/buttom_9"
        style="@style/button_style.white"
        android:text="@string/number_9"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_6"
        app:layout_constraintEnd_toStartOf="@+id/buttom_multiplication"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_8"
        app:layout_constraintTop_toBottomOf="@+id/buttom_percent" />

    <Button
        android:id="@+id/buttom_6"
        style="@style/button_style.white"
        android:text="@string/number_6"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_3"
        app:layout_constraintEnd_toStartOf="@+id/buttom_minus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_5"
        app:layout_constraintTop_toBottomOf="@+id/buttom_9" />

    <Button
        android:id="@+id/buttom_3"
        style="@style/button_style.white"
        android:text="@string/number_3"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_comma"
        app:layout_constraintEnd_toStartOf="@+id/buttom_plus"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_2"
        app:layout_constraintTop_toBottomOf="@+id/buttom_6" />

    <Button
        android:id="@+id/buttom_comma"
        style="@style/button_style.white"
        android:text="@string/comma"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/buttom_0"
        app:layout_constraintEnd_toStartOf="@+id/buttom_equals"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_0"
        app:layout_constraintTop_toBottomOf="@+id/buttom_3" />

    <Button
        android:id="@+id/buttom_negative"
        style="@style/button_style.white"
        android:text="@string/negative"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_8"
        app:layout_constraintEnd_toStartOf="@+id/buttom_percent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_AC"
        app:layout_constraintTop_toTopOf="@+id/buttom_AC"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/buttom_5"
        style="@style/button_style.white"
        android:text="@string/number_5"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_2"
        app:layout_constraintEnd_toStartOf="@+id/buttom_6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_4"
        app:layout_constraintTop_toBottomOf="@+id/buttom_8" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/museo700_regular"
        android:text="@string/name"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:srcCompat="@drawable/rectangle2" />

    <TextView
        android:id="@+id/num_backgroud"
        style="@style/text_digital_styles"
        android:text="@string/num_background"
        android:textColor="@color/transporante_black"
        app:layout_constraintBottom_toBottomOf="@+id/display"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toTopOf="@+id/display" />

    <TextView
        android:id="@+id/answer"
        style="@style/text_digital_styles"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/display"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toTopOf="@+id/display" />

    <Button
        android:id="@+id/buttom_4"
        style="@style/button_style.white"
        android:text="@string/number_4"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_1"
        app:layout_constraintEnd_toStartOf="@+id/buttom_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/buttom_7" />

    <Button
        android:id="@+id/buttom_AC"
        style="@style/button_style.white"
        android:layout_marginTop="25dp"
        android:text="@string/AC"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_7"
        app:layout_constraintEnd_toStartOf="@+id/buttom_negative"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/buttom_0"
        style="@style/button_style.white.large"
        android:layout_marginBottom="59dp"
        android:text="@string/number_0"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttom_comma"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/buttom_1" />

    <Button
        android:id="@+id/buttom_division"
        style="@style/button_style.blue"
        android:text="@string/division"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_multiplication"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_percent"
        app:layout_constraintTop_toBottomOf="@+id/display"
        app:layout_constraintTop_toTopOf="@id/buttom_AC"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <Button
        android:id="@+id/buttom_multiplication"
        style="@style/button_style.blue"
        android:text="@string/multiplication"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_minus"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_9"
        app:layout_constraintTop_toBottomOf="@+id/buttom_division" />

    <Button
        android:id="@+id/buttom_8"
        style="@style/button_style.white"
        android:text="@string/number_8"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_5"
        app:layout_constraintEnd_toStartOf="@+id/buttom_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_7"
        app:layout_constraintTop_toBottomOf="@+id/buttom_negative" />

    <Button
        android:id="@+id/buttom_7"
        style="@style/button_style.white"
        android:text="@string/number_7"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_4"
        app:layout_constraintEnd_toStartOf="@+id/buttom_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/buttom_AC" />

    <Button
        android:id="@+id/buttom_minus"
        style="@style/button_style.blue"
        android:text="@string/minus"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_plus"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_6"
        app:layout_constraintTop_toBottomOf="@+id/buttom_multiplication" />

    <Button
        android:id="@+id/buttom_plus"
        style="@style/button_style.blue"
        android:text="@string/plus"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_equals"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_3"
        app:layout_constraintTop_toBottomOf="@+id/buttom_minus" />

    <Button
        android:id="@+id/buttom_1"
        style="@style/button_style.white"
        android:text="@string/number_1"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toTopOf="@+id/buttom_0"
        app:layout_constraintEnd_toStartOf="@+id/buttom_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="@+id/display"
        app:layout_constraintTop_toBottomOf="@+id/buttom_4" />

    <Button
        android:id="@+id/buttom_2"
        style="@style/button_style.white"
        android:text="@string/number_2"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/buttom_1"
        app:layout_constraintEnd_toStartOf="@+id/buttom_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_1"
        app:layout_constraintTop_toBottomOf="@+id/buttom_5" />

    <Button
        android:id="@+id/buttom_equals"
        style="@style/button_style.blue"
        android:text="@string/equals"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="@+id/buttom_0"
        app:layout_constraintEnd_toEndOf="@+id/display"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttom_comma"
        app:layout_constraintTop_toBottomOf="@+id/buttom_plus" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/numberButtom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="buttom_9,buttom_5,buttom_1,buttom_4,buttom_7,
        buttom_negative,buttom_8,buttom_2,buttom_0,buttom_comma,buttom_3,buttom_6" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/operattionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:constraint_referenced_ids="buttom_division,buttom_multiplication,buttom_minus,buttom_plus,buttom_equals" />

</androidx.constraintlayout.widget.ConstraintLayout>